{
  "name": "trello-copy",
  "version": "1.0.0",
  "engines": {
    "node": ">=22.11.0"
  },
  "engineStrict": true,
  "main": "dist/index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json -w",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --exec 'yarn build && node dist/index.js'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "ts-node src/database/seed.ts"
  },
  "dependencies": {
    "@fastify/type-provider-typebox": "^5.0.1",
    "@sinclair/typebox": "^0.34.8",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "drizzle-seed": "^0.1.2",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "pg": "^8.13.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "@types/node": "^22.9.3",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.28.1",
    "nodemon": "^3.1.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
